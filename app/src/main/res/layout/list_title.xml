<?xml version="1.0" encoding="utf-8"?>

<!-- puts the TextViews in Songs adapter in a correct order. Title on the top, Artists in the middle
, Genre on the bottom -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:background="@color/button_color"
    >

    <TextView
        android:id="@+id/song_word"
        tools:text="@string/songs"
        style="@style/FontList"
        />

    <TextView
    android:id="@+id/artist_word"
    tools:text="@string/artists"
    style="@style/FontList"
    />

    <TextView
        android:id="@+id/genre_word"
        tools:text="@string/genre"
        style="@style/FontList"
        />
</LinearLayout>